{
  "openapi": "3.0.0",
  "info": {
    "title": "NASA DONKI Solar Weather API",
    "version": "1.0.0",
    "description": "Real-time solar weather data from NASA's Space Weather Database"
  },
  "servers": [
    {
      "url": "https://api.nasa.gov/DONKI",
      "description": "NASA DONKI API"
    }
  ],
  "paths": {
    "/FLR": {
      "get": {
        "summary": "Solar Flare Events",
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "example": "2024-01-01"
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": { "type": "string", "format": "date" },
            "example": "2024-01-31"
          },
          {
            "name": "api_key",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Solar flare data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "flrID": { "type": "string" },
                      "beginTime": { "type": "string" },
                      "peakTime": { "type": "string" },
                      "endTime": { "type": "string" },
                      "classType": { "type": "string" },
                      "sourceLocation": { "type": "string" },
                      "activeRegionNum": { "type": "integer" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/CME": {
      "get": {
        "summary": "Coronal Mass Ejection Events",
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "api_key",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "CME event data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "cmeID": { "type": "string" },
                      "startTime": { "type": "string" },
                      "sourceLocation": { "type": "string" },
                      "note": { "type": "string" },
                      "speed": { "type": "number" },
                      "type": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/GST": {
      "get": {
        "summary": "Geomagnetic Storm Events",
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "api_key",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Geomagnetic storm data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "gstID": { "type": "string" },
                      "startTime": { "type": "string" },
                      "allKpIndex": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "observedTime": { "type": "string" },
                            "kpIndex": { "type": "number" },
                            "source": { "type": "string" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "query",
        "name": "api_key"
      }
    }
  }
}
