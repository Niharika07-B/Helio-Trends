{
  "name": "helio-trends",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "NASA_API_KEY": "@nasa_api_key",
    "TMDB_API_KEY": "@tmdb_api_key", 
    "TMDB_BEARER_TOKEN": "@tmdb_bearer_token"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "regions": ["iad1"],
  "github": {
    "enabled": true,
    "autoAlias": true
  }
}